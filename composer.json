{
	"name": "ilias/ilias",
	"description": "ILIAS",
	"license": "GPL v3",
	"authors": [],
	"config": {
		"optimize-autoloader": true,
		"vendor-dir": "./vendor/composer/vendor",
		"allow-plugins": {
			"simplesamlphp/composer-module-installer": true,
			"cweagans/composer-patches": true,
			"captainhook/plugin-composer": true
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"@php cli/build_bootstrap.php",
			"@php cli/setup.php build-artifacts --yes"
		],
		"post-install-cmd": [
			"@php vendor/composer/rmdirs.php"
		],
		"post-update-cmd": [
			"@php vendor/composer/rmdirs.php"
		],
		"test-php-all": [
			"./vendor/composer/vendor/bin/phpunit -c ./components/ILIAS/PHPUnit/config/PhpUnitConfig.xml --colors=always --disallow-todo-tests"
		],
		"test-php": [
			"./scripts/PHPUnit/run_tests.sh"
		],
		"rector": [
			"./vendor/composer/vendor/bin/rector process --config ./scripts/Rector/basic_rector.php --no-diffs"
		]
	},
	"require": {
		"php": ">=8.1 <8.3",
		"ext-gd": "*",
		"ext-dom": "*",
		"ext-xsl": "*",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-simplexml": "*",
		"ext-libxml": "*",
		"ext-xml": "*",
		"ext-zip": "*",
		"ext-imagick": "*"
	},
	"autoload": {
		"psr-4" : {
			"ILIAS\\Scripts\\" : "./scripts"
		},
		"classmap": [
			"./Customizing/global/plugins",
			"./components/ILIAS",
			"./vendor/ilias",
			"./components/ILIAS/soap",
			"./components/ILIAS/setup_/classes"
		],
		"exclude-from-classmap": [
			"./components/ILIAS/Migration",
			"./*/*/lib", "./*/*/*/tests",
			"./Customizing/**/vendor",
			"./components/ILIAS/setup_/sql",
			"./cli/setup.php",
			"./components/ILIAS/setup_/client.master.ini.php",
			"./components/ILIAS/setup_/ilias.master.ini.php"
		]
	},
	"extra": {
		"ext-gd" : {
			"source" : "https://www.php.net/manual/en/book.image.php",
			"used_version" : "*",
			"wrapped_by" : "components/ILIAS/MediaObjects",
			"added_by" : "Alexander Killing",
			"last_update" : "",
			"last_update_by" : "",
			"approved-by": "Jour Fixe",
			"approved-date": "2004-01-01",
			"info": "Used for image map editing since the beginning of ILIAS 3"
		},
		"ext-dom" : {
			"source" : "https://www.php.net/manual/en/class.domdocument.php",
			"used_version" : "*",
			"wrapped_by" : "various",
			"added_by" : "Alexander Killing",
			"last_update" : "",
			"last_update_by" : "",
			"approved-by": "Jour Fixe",
			"approved-date": "2004-01-01",
			"info": "Used for xml document handling since the beginning of ILIAS 3"
		},
		"ext-xsl" : {
			"source" : "https://www.php.net/manual/en/book.xsl.php",
			"used_version" : "*",
			"wrapped_by" : "components/ILIAS/COPage",
			"added_by" : "Alexander Killing",
			"last_update" : "",
			"last_update_by" : "",
			"approved-by": "Jour Fixe",
			"approved-date": "2004-01-01",
			"info": "Used for xsl processing in the page editor since the beginning of ILIAS 3"
		},
		"ext-curl" : {
			"source" : "https://www.php.net/manual/en/book.xsl.php",
			"used_version" : "*",
			"wrapped_by" : "various",
			"added_by" : "",
			"last_update" : "",
			"last_update_by" : "",
			"approved-by": "",
			"approved-date": ""
		},
		"ext-json" : {
			"source" : "https://www.php.net/manual/de/json.installation.php",
			"used_version" : "*",
			"wrapped_by" : "various",
			"added_by" : "",
			"last_update" : "",
			"last_update_by" : "",
			"approved-by": "",
			"approved-date": "",
			"info": "will be core extension with PHP 8.0"
		},
		"patches": {
			"phpmailer/phpmailer": {
				"ILIAS PhpMailer Patches": "./vendor/composer/patches/phpmailer.patch"
			},
			"simplesamlphp/simplesamlphp": {
				"ILIAS SimpleSAMLphp Patches": "./vendor/composer/patches/simplesamlphp.patch"
			},
			"imsglobal/lti": {
				"ILIAS LTI Patches": "./vendor/composer/patches/lti.patch"
			}
		}
	}
}
